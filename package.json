{
  "name": "toolifylab",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next out node_modules",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "postbuild": "next-sitemap",
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit fix",
    "security": "pnpm audit --audit-level=moderate",
    "safe-upgrade": "npx npm-check-updates -u -t minor && pnpm install",
    "migrate": "pnpm dlx shadcn@latest migrate radix",
    "migrate:tailwind": "pnpm dlx @tailwindcss/upgrade --force",
    "validate": "pnpm run type-check && pnpm run lint && pnpm run format:check && pnpm run audit",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@google/genai": "^1.35.0",
    "@hookform/resolvers": "^5.2.2",
    "@serwist/next": "^9.5.0",
    "@types/qrcode": "^1.5.6",
    "@vercel/analytics": "^1.6.1",
    "browser-image-compression": "^2.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "exifr": "^7.1.3",
    "highlight.js": "^11.11.1",
    "jspdf": "^4.0.0",
    "jspdf-autotable": "^5.0.7",
    "lucide-react": "^0.562.0",
    "motion": "^12.26.1",
    "next": "^16.1.1",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.6",
    "qrcode": "^1.5.4",
    "radix-ui": "latest",
    "react": "^19.2.3",
    "react-day-picker": "^9.13.0",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.8",
    "react-easy-crop": "^5.5.6",
    "react-hook-form": "^7.71.0",
    "react-icons": "^5.5.0",
    "react-markdown": "^10.1.0",
    "recharts": "^3.6.0",
    "rehype-highlight": "^7.0.2",
    "remove-markdown": "^0.6.2",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/estree": "^1.0.8",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^25.0.6",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.1",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "serwist": "^9.5.0",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,md,css,html}": ["prettier --write"],
    "*.{ts,tsx}": ["tsc --noEmit"]
  }
}
